<Window x:Class="KSServicePoster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="KSService" Height="350" Width="525" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <Button Content="　　新增檔案　　" Click="OnAddItemButtonClicked"/>
            <Button Content="　　刪除檔案　　" Click="OnDeleteItemButtonClicked" Margin="10,0,0,0"/>
            <Button Content="　　開始播放　　" Click="OnStartRunButtonClicked" Margin="10,0,0,0"/>
        </StackPanel>
        <ListView Grid.Row="1" x:Name="listViewContent" ItemsSource="{Binding ItemsSource}"/>
    </Grid>
</Window>
